{
  "name": "store-manager",
  "version": "1.0.0",
  "engines": {
    "node": "8.11.1"
  },
  "description": "Store Manager is a web application that helps store owners manage sales and product inventory\r records.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build-babel": "babel -d ./dist ./server -s",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./dist/index.js",
    "dev": "babel-watch server/index.js",
    "test": "nyc mocha server/test/*.js --require babel-register --reporter spec || exit 0",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "./node_modules/.bin/eslint server --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bobjayafam/store-manager.git"
  },
  "keywords": [],
  "author": "Jude Afam <afamjudeo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bobjayafam/store-manager/issues"
  },
  "homepage": "https://github.com/Bobjayafam/store-manager#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-register": "6.26.0",
    "babel-watch": "2.0.7",
    "chai": "4.2.0",
    "chai-http": "4.2.0",
    "coveralls": "3.0.2",
    "eslint": "5.7.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.14.0",
    "mocha": "5.2.0",
    "nodemon": "1.18.4",
    "nyc": "13.1.0"
  },
  "dependencies": {
    "bcrypt": "3.0.2",
    "dotenv": "6.1.0",
    "express": "4.16.4",
    "joi": "14.0.1",
    "jsonwebtoken": "8.3.0",
    "morgan": "1.9.1",
    "pg": "7.6.0",
    "shortid": "2.2.13",
    "uuid": "3.3.2"
  }
}
